<form class="input-form" action="<%= postAction %>" method="POST">
    <input type="hidden" name="_csrf" value="<%= csrfToken %>">
    <% if(inputData.inputError){ %>
        <p class="normal-font error-box"><%= inputData.errorMessage %></p>
    <% } %>
    <ul class="input-form-list">
        <li>
            <label class="input-label topic-font" for="title"
                >Title</label
            >
            <input
                type="text"
                class="text-input"
                name="title"
                id="title"
                
                value="<%= inputData.enteredPostTitle %>"
            />
        </li>
        <li>
            <label
                class="input-label topic-font"
                for="email-confirm"
                >Cornfirm email</label
            >
            <textarea
                class="text-input"
                name="content"
                id="content"
                cols="8"
                
            ><%= inputData.enteredPostContent %></textarea>
        </li>
        <li class="action-container">
            <button class="normal-font">Save</button>
        </li>
    </ul>
</form>